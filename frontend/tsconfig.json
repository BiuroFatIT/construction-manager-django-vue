{
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",             
        "jsxFragmentFactory": "Fragment",
        "types": ["vite/client"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "shims-vue.d.ts"
    ]
}
